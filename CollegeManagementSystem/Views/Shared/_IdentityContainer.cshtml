@inject UserManager<IdentityUser> userManager
@inject SignInManager<IdentityUser> signInManager
<div>
@if(signInManager.IsSignedIn(User)) {
        <b> @userManager.GetUserName(User) </b>
    <form asp-action="Logout" asp-controller="Account" method="post"                            style="display:inline">
        <button type="submit" class="btn btn-danger">Logout</button>
    </form>
}
else {
    <a class="btn btn-primary" asp-action="Login" asp-controller="Account">Login</a>
    <a class="btn btn-success" asp-action="Register" asp-controller="Account">Register</a>
}
</div>
