@model IEnumerable<Professor>
@{
    ViewData["Title"] = "Professors";
}

<a asp-action="Create" asp-controller="Professors" class="btn btn-light text-dark mb-4">Add New Professor</a>
@if(Model.Count() > 0) {
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(e => e.Id)</th>
                <th>@Html.DisplayNameFor(e => e.Name)</th>
                <th>@Html.DisplayNameFor(e => e.Specialization)</th>
                <th>@Html.DisplayNameFor(e => e.Salary)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var professor in Model)
            {
                <tr>
                    <td> @professor.Id </td>
                    <td> @professor.Name </td>
                    <td> @professor.Specialization </td>
                    <td> @professor.Salary </td>
                    <td>
                        <a asp-action="Details" asp-controller="Professors" asp-route-id="@professor.Id"  class="btn btn-success">Details</a>
                        <a asp-action="GetDeleteView" asp-controller="Professors" asp-route-id="@professor.Id"  class="btn btn-danger">Delete</a>
                        <a asp-action="Update" asp-controller="Professors" asp-route-id="@professor.Id"  class="btn btn-primary">Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else {
    <h1>No Professors Available To Display.</h1>
}