@model IEnumerable<Course>
@{
    ViewData["Title"] = "Courses";
}
<a asp-action="Create" asp-controller="Courses" class="btn btn-light text-dark mb-4">Add New Course</a>
@if(Model.Count() > 0) {
    <h2 class="text-danger"> @ViewBag.PreventNonInstructorCourse </h2>

    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(e => e.Id)</th>
                <th>@Html.DisplayNameFor(e => e.Name)</th>
                <th>@Html.DisplayNameFor(e => e.Description)</th>
                <th>@Html.DisplayNameFor(e => e.Code)</th>
                <th>@Html.DisplayNameFor(e => e.hours)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var course in Model)
            {
                <tr>
                    <td> @course.Id </td>
                    <td> @course.Name </td>
                    <td> @course.Description </td>
                    <td> @course.Code </td>
                    <td> @course.hours </td>
                    <td>
                        <a asp-action="Details" asp-controller="Courses" asp-route-id="@course.Id"  class="btn btn-success">Details</a>
                        <a asp-action="Delete" asp-controller="Courses" asp-route-id="@course.Id"  class="btn btn-danger">Delete</a>
                        <a asp-action="Update" asp-controller="Courses" asp-route-id="@course.Id"  class="btn btn-primary">Update</a>
                        <a asp-action="AssignProfessor" asp-controller="Courses" asp-route-id="@course.Id"  class="btn btn-light">Assign Professor</a>
                        <a asp-action="RegisterStudent" asp-controller="Courses" asp-route-id="@course.Id"  class="btn btn-dark">Register Student</a>
                        <a asp-action="NotEvaluatedStudents" asp-controller="Courses" asp-route-id="@course.Id"  class="btn btn-outline-success ">Evaluate Student</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
 
}
else {
    <h1>No Courses Available To Register</h1>
}