@model IEnumerable<Student>
@{
    ViewData["Title"] = "Students";
}

<a asp-action="Create" asp-controller="Students" class="btn btn-light text-dark mb-4">Add New Student</a>
@if(Model.Count() > 0) {
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(e => e.Id)</th>
                <th>@Html.DisplayNameFor(e => e.Name)</th>
                <th>@Html.DisplayNameFor(e => e.GPA)</th>
                <th>@Html.DisplayNameFor(e => e.Level)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var student in Model)
            {
                <tr>
                    <td> @student.Id </td>
                    <td> @student.Name </td>
                    <td> @student.GPA </td>
                    <td> @student.Level </td>
                    <td>
                        <a asp-action="Details" asp-controller="Students" asp-route-id="@student.Id"  class="btn btn-success">Details</a>
                        <a asp-action="GetDeleteView" asp-controller="Students" asp-route-id="@student.Id"  class="btn btn-danger">Delete</a>
                        <a asp-action="Update" asp-controller="Student" asp-route-id="@student.Id"  class="btn btn-primary">Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else {
    <h1 class="text-center text-danger">No Students Available To Display.</h1>
}